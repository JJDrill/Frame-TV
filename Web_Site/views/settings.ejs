<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <header>
    <% include partials/header %>
  </header>
  <body>
    <div class="viewArea">      
      <form method="POST" action="/settings">
        <% app_settings.forEach(function(data) { %>
          <div class="form-group row">
            <label for=<%= data.setting_name %> class="col-sm-3 col-form-label col-form-label-sm"><%= data.setting_name %></label>
            <div class="col-sm-2">
              <input type="number" class="form-control form-control-sm" id="colFormLabelSm" name="<%= data.setting_name %>" placeholder="" value="<%= data.setting_value %>">
            </div>
          </div>
          <% }); %>
          <div class="form-group row">
            <div class="col-sm-2">
              <button type="submit" class="btn btn-primary">Save Settings</button>
            </div>
          </div>
        </form>
        <% include partials/scripts %>
      </body>
    </div>
</html>
