<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
    <link rel="stylesheet" href="../css/schedule.css">
    <script>
      var input_data = <%-JSON.stringify(schedule)%>
    </script>
  </head>
  <header>
    <% include partials/header %>
  </header>
  <body>
    <div class="viewArea">
      <div class="scheduleHeader">
        <input id="saveButton" align="left" class="btn btn-primary" type="submit" value="Submit" onclick="saveChanges()">
        <input id="cancelButton" align="left" class="btn btn-primary" type="reset" value="Reset" onclick="cancelChanges()">
        <table align="right" class="table table-bordered table-sm legend">
          <tr>
            <td data-state="ON">TV Always On</td>
            <td data-state="MOTION">Motion Activated</td>
            <td data-state="OFF">TV Always Off</td>
          </tr>
        </table>
      </div>
      <div id="useSchedule">
        <div class="am_schedule"></div>
        <div class="pm_schedule"></div>
      </div>
    </div>
    <% include partials/scripts %>
    <script src="../js/schedule.js"></script>
  </body>
</html>
