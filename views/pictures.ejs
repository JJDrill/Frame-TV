<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Pictures</title>
    <% include partials/head %>
    <link rel="stylesheet" href="../css/pictures.css">
  </head>
  <header>
    <% include partials/header %>
  </header>
  <body>
    <div class="viewArea">
      <div class="col">

        <div class="row addPictureView border">
          <form action="addPicture" id="addPictureForm" method="post" enctype="multipart/form-data">
            <input type="button" class="btn-sm btn-primary" id="addPictureButton" value="Add a Picture" onClick="addPictureAction()">
            <input type="file" id="fileUploadButton" name="filetoupload" accept="image/*" hidden="hidden">
            <input type="submit" id="addPictureSubmit" value="Add File" hidden="hidden">
          </form>
          <h6>
            <small>
              Click the botton above to add a picture.
              If the picture name alredy exists the old one will be overwritten.
            </small>
          </h6>
        </div>

        <div class="row">
          <table align="right" class="table table-sm picTable table-responsive w-auto">
            <thead>
              <tr>
                <th>Picture</th>
                <th class="tblCenter">Include in Slideshow</th>
                <th class="tblCenter">Remove</th>
              </tr>
            </thead>
            <% picture_data.forEach(function(data) { %>
              <tr id=<%= data.id %>>
                <td> <%= data.name %> </td>
                <td class="tblCenter">
                  <button id="picButton<%= data.id %>" class="<%= data.enabled ? 'btn-success' : 'btn-secondary' %>" onclick="enableDisablePicture(this.id, <%= data.id %>)"><%= data.enabled ? 'Yes' : 'No' %></button></td>
                  <td class="tblCenterButton">
                    <button onclick="deletePic(<%= data.id %>)" class="close text-danger" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </td>
                </tr>
                <% }); %>
              </table>
            </div>
      </div>

    </div>
    <% include partials/scripts %>
    <script src="../js/pictures.js"></script>
  </body>
</html>
